void ind_2()
{
	double h, i, xmin, xmax, x, k, x0, y0, y;
	xmin = 2;
	xmax = 3;
	x = xmin;
	i = 1;
	cout << "На сколько частей разделить область определения корня?" << endl << "Введите значение: ";
	cin >> k;
	h = (xmax - xmin) / k;
	cout << "Шаг равен: " << h << endl;
	cout << "--------------------------------" << endl;
	y0 = abs(1 / tan(2 * x) - 1 / (1 + pow(x, 2)));
	x0 = xmin;
	for (i = 0; i <= k; i++)
	{
		x = xmin + i*h;
		y = 1 / tan(2 * x) - 1 / (1 + pow(x, 2));
		cout << i + 1 << ")" << "x = " << x << endl;
		cout << "  y = " << y << endl;
		if (abs(y) < y0)
		{
			x0 = x;
			y0 = abs(y);
		}

	}
	cout << "Наиболее приближенный корень: " << x0;
	_getch();

}

void ind_3()
{
	double x, xmax, xmin, h, y, i;
	xmin = 1;
	xmax = 5;
	h = 1;
	i = 1;
	cout << "Значения функции y = sin(x)*sinh(x) на отрезке [1, 5] с шагом 1: " << endl;
	cout << "--------------------------------" << endl;
	for (x = xmin; x <= xmax; x = x + h)
	{
		y = sin(x)*sinh(x);
		cout << i << ")" << "x = " << x << endl;
		cout << "  y = " << y << endl;
		i++;
	}
	_getch();
}


void dop_1_1()
{
	int i, a, b, k;
	for (k = 2; k <= 9; k++)
	{
		cout << "Числа, сумма цифр которых не меняется при умножении числа на " << k << ": " << endl;
		for (i = 10; i <= 99; i++)
		{
			a = i % 10 + i / 10;
			b = (k * i) / 100 % 10 + (k * i) / 10 % 10 + (k * i) % 10;
			if (a == b) cout << i << "; ";
		}
		cout << endl << "--------------------------------" << endl;
	}

	_getch();
}

void dop_1_2()
{
	int i, a, b;
	cout << "Введите целое число: " << endl;
	cin >> a;
	cout << "Трёхзначные числа, сумма цифр которых равна заданному числу: " << endl;
	for (i = 100; i <= 999; i++)
	{
		b = i % 10 + i / 10 % 10 + i / 100;
		if (a == b) cout << i << endl;
	}
	_getch();
}

void dop_1_3()
{
	int i, a, b;
	cout << "Трёхзначные числа, средняя цифра которых равна сумме первой и последней: " << endl;
	for (i = 100; i <= 999; i++)
	{
		a = i / 10 % 10;
		b = i % 10 + i / 100;
		if (a == b) cout << i << endl;
	}
	_getch();
}

void dop_1_4()
{
	int i, a, b;
	cout << "Трёхзначные числа, которые можно представить разностью между квадратом числа," << endl;
	cout << "образованного первыми двумя цифрами и квадратом третьей цифры: " << endl;
	for (i = 100; i <= 999; i++)
	{
		a = pow(i / 10, 2);
		b = pow(i % 10, 2);
		if (i == a - b) cout << i << endl;
	}
	_getch();
}

void dop_1_5()
{
	int i, a, b;
	cout << "Двузначные числа, сумма квадратов цифр которых делится на 17: " << endl;
	for (i = 10; i <= 99; i++)
	{
		a = pow(i / 10, 2) + pow(i % 10, 2);
		b = a % 17;
		if (b == 0) cout << i << endl;
	}
    _getch();
}

void dop_1_6()
{
	int i, k, p, l, m;
	cout << "Трёхзначные числа, представимые в виде сумм факториалов своих цифр: " << endl;
	for (i = 100; i <= 999; i++)
	{
		k = l = m = 1;
		for (p = 1; p <= i / 100; p++)
		{
			k = k * p;
		}
		for (p = 1; p <= i % 10; p++)
		{
			l = l * p;
		}
		for (p = 1; p <= i / 10 % 10; p++)
		{
			m = m * p;
		}
		if (i == k + l + m) cout << i << endl;
	}
	_getch();
}

void dop_1_7()
{
	int i, a, p;
	p = 0;
	cout << "Двузначные числа, у которых куб суммы цифр равен самому числу: " << endl;
	for (i = 10; i <= 99; i++)
	{
		a = pow(i / 10 + i % 10, 3);
		cout << i << "   " << a << endl;
		if (a == i)
		{
			cout << i << endl;
			p = p + 1;
		}
	}
	if (p == 0) cout << "Таких чисел нет";
	_getch();
}

void dop_1_8()
{
	int i, a, b;
	cout << "Двузначные числа, равные утроенному призведению своих цифр: " << endl;
	for (i = 10; i <= 99; i++)
	{
		a = 3 * (i / 10) * (i % 10);
		if (i == a) cout << i << endl;
	}
	_getch();
}

void dop_1_9()
{
	int i, a, b;
	cout << "Двузначные числа, удвоенная сумма цифр которых равна их произведению: " << endl;
	for (i = 10; i <= 99; i++)
	{
		a = 2 * (i / 10 + i % 10);
		b = (i / 10)*(i % 10);
		if (a == b) cout << i << endl;
	}
	_getch();
}

void dop_1_10()
{
	int i, j, M, a, p;
	cout << "Введите натуральное число М: ";
	cin >> M;
	cout << "Сумма квадратов двух натуральных чисел равная М: " << endl;
	p = 0;
	for (i = 1; i <= sqrt(M); i++)
	{
		for (j = 1; j <= i; j++)
		{
			a = pow(i, 2) + pow(j, 2);
			if (a == M)
			{
				cout << M << " = " << i << "^2 + " << j << "^2";
				p = p + 1;
			}
		}
	}
	if (p == 0) cout << "Таких натуральных чисел нет.";
	_getch();
}

void dop_1_11()
{
	int N, i;
	double pr, summ, result;
	cout << "Введите сумму вклада: ";
	cin >> summ;
	cout << "Введите ежемесячную процентную ставку: ";
	cin >> pr;
	cout << "Введите количество месяцев, на которое делается вклад: ";
	cin >> N;
	for (i = 1; i <= N; i++)
	{
		summ = summ + summ * (pr / 100);
	}
	cout << "Конечная сумма вклада через " << N << " месяцев: " << summ << endl;
	_getch();
}
