using namespace std;

double M_PI = 3.1415;

void z1()
{
	int i;
	double a, b, N;
	N = 0;
	i = 1;
	while (i <= 30)
	{
		if (i % 2 == 1)
		{
			a = i;
			b = pow(i, 2);
		}
		else
		{
			a = i / 2;
			b = pow(i, 3);
		}
		N = N + pow(a - b, 2);
		i++;
	}
	cout << "Сумма равна: " << N;
	_getch();
}

void z2()
{
	double dn, S, n;
	n = 1;
	S = 0;
	cout << "dn = 1/2^n + 1/3^n" << endl;
	cout << "---------------------------------" << endl;
	do
	{
		dn = 1 / pow(2, n) + 1 / pow(3, n);
		S = S + dn;
		cout << "d" << n << " = " << dn << endl;
		n++;
	} while (dn >= 0.001);
	cout << "---------------------------------" << endl;
	cout << "Сумма равна: " << S;
	_getch();
}

void z3()
{
	double a, b, h, x, m, y, i;
	a = 0;
	b = M_PI / 2;
	m = 20;
	h = (b - a) / m;
	cout << "Значения функции y = sin(x) - cos(x) на отрезке [0,pi/2]: " << endl;
	cout << "--------------------------------" << endl;
	for (i = 1; i <= m; i++)
	{
		x = a + i*h;
		y = sin(x) - cos(x);
		cout << i + 1 << ")" << "x = " << x << endl;
		cout << "  y = " << y << endl;
	}


	_getch();
}


